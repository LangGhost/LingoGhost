{
    "manifest_version": 3,
    "name": "LingoGhost",
    "version": "1.0",
    "description": "Learn a language by randomly replacing words on the web using Gemini AI.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "identity"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://*.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "oauth2": {
        "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/cloud-platform"
        ]
    }
}